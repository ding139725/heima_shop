<view class="tabs">
    <view class="tabs_title">
        <view class="tabs_item  {{item.isActive?'active':''}}" 
        wx:for="{{tabs}}"
        wx:key="id"
        bindtap='changeTabs'
        data-index='{{index}}' 
         >
         <!-- 绑定点击事件获取被点击导航栏的参数 -->
            {{item.value}}
        </view>
    </view>
    <view class="tabs_content">
        <slot></slot>
    </view>
</view>