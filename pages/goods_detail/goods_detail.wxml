<!-- 轮播图开始 -->
<view class="detail_swiper">
    <swiper autoplay="{{true}}" circular="{{true}}" indicator-dots="{{true}}">
        <swiper-item class="" item-id="" wx:for="{{goodsObj.pics}}" wx:key="pics_id" bindtap="changeBigImage" data-url="{{item.pics_mid}}">
            <!-- 绑定点击事件 -->
            <image class="" src="{{item.pics_mid}}" mode="widthFix"></image>
        </swiper-item>
    </swiper>
</view>
<!-- 轮播图结束 -->
<!-- 商品名称价格及收藏按钮开始 -->
<view class="goods_price">￥{{goodsObj.goods_price}}</view>
<view class="goods_name_row">
    <view class="goods_name">{{goodsObj.goods_name}}</view>
    <view class="goods_collect" bindtap='changeCollect'>
        <text class="iconfont  {{isCollect?'iconshoucang1':'iconshoucang'}}"></text>
        <view class="collect_text" bindtap='collect'>收藏</view>
    </view>
</view>
<!-- 商品名称价格及收藏按钮结束 -->
<!-- 图文详情开始 -->
<view class="goods_info">
    <view class="goods_info_title">图文详情</view>
    <view class="goods_info_content">
        <rich-text class="" nodes="{{goodsObj.goods_introduce}}"></rich-text>
    </view>
</view>
<!-- 图文详情结束 -->
<!-- 底部工具栏开始 -->
<view class="bottom">
    <view class="tool_item">
        <view class="iconfont iconkefu"></view>
        <view>客服</view>
        <button open-type="contact"></button>
    </view>
    <view class="tool_item">
        <view class="iconfont iconyixianshi-"></view>
        <view>分享</view>
        <button open-type="share"></button>
    </view>
    <navigator class="tool_item" target="" url="/pages/cart/cart" open-type='switchTab'>
        <view class="iconfont icongouwuche"></view>
        <view>购物车</view>
    </navigator>
    <view class="tool_item btn_cart"
        bindtap="cartAdd"
    >
        <view>加入购物车</view>
    </view>
    <view class="tool_item btn_buy">
        <view>立即购买</view>
    </view>
</view>
<!-- 底部工具栏结束 -->