page {
  background-color: #edece8;
}
.user_info_wrap {
  height: 45vh;
  background-color: var(--themeColor);
  overflow: hidden;
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  width: 100%;
  height: 50vh;
  filter: blur(5px);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  margin-top: 40rpx;
  color: #fff;
  font-size: 36rpx;
}
.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1px solid blue;
  border-radius: 5px;
  padding: 20rpx 40rpx;
  color: #fff;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  color: #666;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  top: -40rpx;
  padding-bottom: 60rpx;
}
.user_content .user_main .histroy_wrap {
  display: flex;
  background-color: #fff;
  text-align: center;
}
.user_content .user_main .histroy_wrap navigator {
  padding: 10rpx 0;
  flex: 1;
}
.user_content .user_main .histroy_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .order_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .user_main .order_wrap .orders_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .order_wrap .orders_content {
  display: flex;
  text-align: center;
}
.user_content .user_main .order_wrap .orders_content navigator {
  padding: 15rpx 0;
  flex: 1;
}
.user_content .user_main .order_wrap .orders_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.user_content .user_main .order_wrap .orders_content navigator .orders_name {
  color: #666;
}
.user_content .user_main .address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.user_content .user_main .app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
